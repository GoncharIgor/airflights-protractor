{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./target/src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "src/custom_typings"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
